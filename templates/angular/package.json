{
	"name": "eon-application",
	"version": "0.0.0",
	"productName": "Eon Application",
	"description": "Codebase for desktop application base on electron and angular",
	"author": {
		"name": "BitMorest",
		"url": "https://github.com/BitMorest"
	},
	"repository": "https://github.com/BitMorest/electron-angular.git",
	"main": ".webpack/main",
	"private": true,
	"engines": {
		"node": "^14.20.0 || ^16.13.0 || >=18.10.0",
		"yarn": ">=1.22.4 <2",
		"npm": "Please use yarn instead of NPM to install dependencies"
	},
	"license": "UNLICENSED",
	"workspaces": [
		"workspaces/angular",
		"workspaces/shared"
	],
	"scripts": {
		"start": "run-p -l start:shared start:angular start:electron",
		"start:shared": "tsc -p workspaces/shared/tsconfig.json -w",
		"start:angular": "wait-on ../../packages/types/.dist/index.d.ts && wait-on ../../packages/electron/.dist/index.d.ts && wait-on workspaces/shared/.dist/index.d.ts && cd workspaces/angular && yarn start",
		"start:electron": "node scripts/electron-start-watch.js",
		"package": "yarn package:shared && yarn package:angular && yarn package:electron",
		"package:shared": "tsc -b workspaces/shared",
		"package:angular": "cd workspaces/angular && yarn package",
		"package:electron": "electron-forge package",
		"test:e2e": "yarn test:e2e:angular && yarn test:e2e:electron",
		"test:e2e:electron": "yarn package && playwright test -c ./workspaces/electron/test/playwright.config.ts",
		"test:e2e:angular": "run-p -l -r start test:e2e:angular:start",
		"test:e2e:angular:start": "wait-on http://localhost:4200 && cd workspaces/angular && yarn cypress:run",
		"make": "yarn package:shared && yarn package:angular && electron-forge make",
		"i18n:extract": "yarn workspace angular i18n:extract",
		"i18n:find": "yarn workspace angular i18n:find",
		"publish": "electron-forge publish",
		"clean": "git clean -xdfq"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "./workspaces/angular/src/assets/icons/icon",
				"executableName": "EonApplication"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-zip"
				},
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"options": {
							"icon": "./workspaces/angular/src/assets/icons/icon.icns"
						}
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"options": {
							"icon": "./workspaces/angular/src/assets/icons/icon.png"
						}
					}
				},
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"setupIcon": "./workspaces/angular/src/assets/icons/icon.ico"
					}
				}
			],
			"plugins": [
				{
					"name": "@electron-forge/plugin-webpack",
					"config": {
						"mainConfig": "./settings/webpack.main.config.js",
						"renderer": {
							"config": "./settings/webpack.renderer.config.js",
							"entryPoints": [
								{
									"html": "./node_modules/@e-dizzy/electron/renderer/index.html",
									"js": "./node_modules/@e-dizzy/electron/renderer/index.ts",
									"name": "main_window",
									"preload": {
										"js": "./node_modules/@e-dizzy/electron/renderer/preload.ts"
									}
								}
							]
						}
					}
				}
			]
		}
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.4",
		"@electron-forge/maker-deb": "^6.0.4",
		"@electron-forge/maker-dmg": "^6.0.4",
		"@electron-forge/maker-rpm": "^6.0.4",
		"@electron-forge/maker-squirrel": "^6.0.4",
		"@electron-forge/maker-zip": "^6.0.4",
		"@electron-forge/plugin-webpack": "^6.0.4",
		"@electron/remote": "^2.0.9",
		"@playwright/test": "^1.29.2",
		"@types/fs-extra": "^9.0.13",
		"@types/lodash": "^4.14.191",
		"@types/node": "^18.11.18",
		"@vercel/webpack-asset-relocator-loader": "^1.7.3",
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
		"chromedriver": "^108.0.0",
		"copy-webpack-plugin": "^11.0.0",
		"css-loader": "^6.7.3",
		"electron": "^22.0.0",
		"electron-log": "^4.4.8",
		"electron-store": "^8.1.0",
		"electron-context-menu": "^3.6.1",
		"electron-debug": "^3.2.0",
		"electron-playwright-helpers": "^1.2.2",
		"fork-ts-checker-webpack-plugin": "^7.2.14",
		"node-loader": "^2.0.0",
		"npm-check-updates": "^16.6.2",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.29.2",
		"shx": "^0.3.4",
		"style-loader": "^3.3.1",
		"tree-kill": "^1.2.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "4.9.4",
		"wait-on": "^7.0.1",
		"webpack": "^5.75.0"
	},
	"dependencies": {
		"@e-dizzy/electron": "link:../../packages/electron"
	},
	"resolutions": {
		"**/typescript": "4.8.4",
		"@e-dizzy/types": "link:../../packages/types",
		"@e-dizzy/electron": "link:../../packages/electron",
		"@e-dizzy/angular": "link:../../packages/angular/.dist"
	}
}
