{
	"name": "e-dizzy-source",
	"private": true,
	"version": "0.0.0",
	"description": "Ultra fast electron & angular bootstrap",
	"homepage": "https://github.com/e-dizzy/e-dizzy",
	"bugs": "https://github.com/e-dizzy/e-dizzy/issues",
	"engines": {
		"node": "^14.20.0 || ^16.13.0 || >=18.10.0",
		"yarn": ">=1.22.4 <2",
		"npm": "Please use yarn instead of NPM to install dependencies"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/e-dizzy/e-dizzy.git"
	},
	"license": "UNLICENSED",
	"workspaces": [
		"./packages/types",
		"./packages/electron",
		"./packages/angular",
		"./packages/angular/.dist",
		"./demo"
	],
	"scripts": {
		"demo:start": "run-p -l watch start:demo",
		"demo:start:serve": "wait-on packages/types/.dist/index.d.ts && wait-on packages/angular/.dist/index.d.ts  && wait-on packages/electron/.dist/index.d.ts && cd demo && yarn start",
		"demo:package": "cd demo && yarn package",
		"demo:make": "cd demo && yarn make",
		"build": "run-s -l build:types && run-p -l build:electron build:angular",
		"build:types": "yarn workspace @e-dizzy/types build",
		"build:electron": "yarn workspace @e-dizzy/electron build",
		"build:angular": "yarn workspace angular-worspace build",
		"watch": "run-p -l watch:types watch:electron watch:angular",
		"watch:types": "yarn workspace @e-dizzy/types watch",
		"watch:electron": "yarn workspace @e-dizzy/electron watch",
		"watch:angular": "yarn workspace angular-worspace watch",
		"version": "lerna version --no-private",
		"release": "yarn build && lerna publish --no-private --skip-git",
		"lint": "eslint .",
		"postinstall": "yarn build && cd demo && yarn install",
		"prepare": "husky install",
		"git:clean": "git clean -xdfq",
		"git:reset": "yarn git:clean && yarn install"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.0",
		"@commitlint/config-conventional": "^17.4.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-sonarjs": "^0.17.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"husky": "^8.0.3",
		"lerna": "^6.4.0",
		"prettier": "^2.8.1",
		"pretty-quick": "^3.1.3",
		"typescript": "~4.8.2"
	},
	"lint-staged": {
		"**/*.ts": "yarn lint"
	}
}
